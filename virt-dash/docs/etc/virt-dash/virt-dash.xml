<virt-dash>
    <hosts>
        <host address="1.2.3.4" name="vm1" url="qemu+ssh://root@1.2.3.4/system">
        	<guest-image name="Opensuse 13.1">
				<domain type="kvm">
				  <memory unit="KiB">1048576</memory>
				  <currentMemory unit="KiB">1048576</currentMemory>
				  <vcpu placement="static">2</vcpu>
				  <os>
				    <type arch="x86_64" machine="pc-1.1">hvm</type>
				    <boot dev="hd"/>
				  </os>
				  <features>
				    <acpi/>
				    <apic/>
				    <pae/>
				  </features>
				  <clock offset="utc"/>
				  <on_poweroff>destroy</on_poweroff>
				  <on_reboot>restart</on_reboot>
				  <on_crash>restart</on_crash>
				  <devices>
				    <emulator>/usr/bin/qemu-kvm</emulator>
				    <disk type="file" device="disk">
				      <driver name="qemu" type="qcow2"/>
				      <source file="/mnt/vms/opensuse_131_base.qcow2"/>
				      <target dev="vda" bus="virtio"/>
				    </disk>
				    <interface type="bridge">
				      <mac address="52:54:00:00:00:00"/>
				      <source bridge="br0"/>
				      <model type="virtio"/>
				    </interface>
				    <serial type="pty">
				      <target port="0"/>
				    </serial>
				    <console type="pty">
				      <target type="serial" port="0"/>
				    </console>
				    <input type="tablet" bus="usb"/>
				    <input type="mouse" bus="ps2"/>
				    <graphics type="vnc" port="-1" autoport="yes" listen="1.2.3.4"/>
				    <video>
				      <model type="cirrus" vram="9216" heads="1"/>
				    </video>
				  </devices>
				</domain>
        	</guest-image>
        </host>
    </hosts>
    <poll-period>300</poll-period>
    <users>
        <user email="admin" name="Admin" password=""/>
    </users>
	<websockify-config-file>/etc/virt-dash/websockify.cfg</websockify-config-file>
</virt-dash>
