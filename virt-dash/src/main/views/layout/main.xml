<!DOCTYPE balsa SYSTEM "http://balsa.intrbiz.net/balsa.dtd">
<?RenderLibrary com.intrbiz.balsa?>
<!-- A template view, applied to all views -->
<html xmlns="com.intrbiz.balsa">
	<head>
		<title>Virt Dash - #{title()}</title>
		<link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css' />
		<link rel="stylesheet" type="text/css" href="#{public('/style.css')}" />
		<script type="text/javascript" src="#{public('jquery-2.0.3.min.js')}"></script>
	</head>
	<body>
		<div id="header">
			<div class="container">
				<p id="logo"><a href="/">Virt Dash</a></p>
				<div id="login">
					<p>Welcome: #{balsa().currentPrincipal.fullName}</p>
					<p>
						<a href="/logout">Logout</a>
						<a href="/change-password">Change password</a>
					</p>
				</div>
			</div>
		</div>
		<div id="content" class="container">
			<h1>#{title()}</h1>
			<content/>
		</div>
	</body>
</html>