<!DOCTYPE balsa SYSTEM "http://balsa.intrbiz.net/balsa.dtd">
<?RenderLibrary com.intrbiz.balsa?>
<!-- The index view -->
<fragment xmlns="com.intrbiz.balsa" title="Overview For #{currentAccount.summary}">
	<div class="row">
		<div class="col-md-12">
			<div class="card">
				<h5 class="card-header">Machines</h5>
				<div class="card-body">
					<p class="card-text">These are the machines defined in the #{currentAccount.summary} account.</p>
					<table class="table">
	      				<tr>
	      					<th>Zone</th>
	      					<th>Machine</th>
	      					<th>Type</th>
	      					<th>Image</th>
	      					<th>Status</th>
	      					<th>CPU</th>
	      					<th>Memory</th>
	      					<th>&nbsp;</th>
	      				</tr>
	      				<data-set var="machine" value="#{machines}">
	      					<tr>
	      						<td>#{machine.zone.summary}</td>
	      						<td>#{machine.name}</td>
	      						<td>#{machine.type.family}.#{machine.type.name}</td>
	      						<td>#{machine.image.name}</td>
	      						<td>
	      							<span class="badge badge-#{status_class(machine.status)}">#{machine.status}</span>
	      						</td>
	      						<td>
	      							<span>#{decimalformat('0.00', if(machine.health == null, 0.0, (100.0 - machine.health.cpu.idle)))}%</span> 
	      							<span>(#{decimalformat('0.0', if(machine.health == null, 0.0, machine.health.load.min1))})</span></td>
	      						<td>
	      							<span>#{decimalformat('0.00', if(machine.health == null, 0.0, machine.health.memory.percent))}%</span>
	      						</td>
	      						<td>
	      							<div class="btn-group">
										<button type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Manage Machine</button>
										<div class="dropdown-menu dropdown-menu-right">
											<a class="dropdown-item text-primary" href="/machine/id/#{machine.id}">Details</a>
											<div class="dropdown-divider"></div>
											<h6 class="dropdown-header">Machine State</h6>
											<a class="dropdown-item text-warning" href="/machine/id/#{machine.id}/reboot">Reboot</a>
								            <a class="dropdown-item text-success" href="/machine/id/#{machine.id}/start">Start</a>
								            <a class="dropdown-item text-warning" href="/machine/id/#{machine.id}/stop">Stop</a>
								            <div class="dropdown-divider"></div>
								            <a class="dropdown-item text-danger" href="/machine/id/#{machine.id}/destroy">Destroy</a>
										</div>
									</div>
	      						</td>
	      					</tr>
	      				</data-set>
	      			</table>
	      			<container rendered="#{balsa().permission('machine_manage', currentAccount)}">
						<a href="/machine/new" class="btn btn-primary">Create a Machine</a>
					</container>
				</div>
			</div>
		</div>
	</div>
	<div class="row" style="margin-top: 30px;">
    	<div class="col-md-12">
    		<div class="card">
    			<h5 class="card-header">Networks</h5>
				<div class="card-body">
					<p class="card-text">These are the networks defined in the #{currentAccount.summary} account.</p>
					<table class="table">
	      				<tr>
	      					<th>Zone</th>
	      					<th>Network</th>
	      					<th>CIDR</th>
	      					<th>Status</th>
	      					<th>Router</th>
	      					<th>DNS</th>
	      					<th>Description</th>
	      					<container rendered="#{balsa().permission('global_admin')}">
	      						<th>Type</th>
	      						<th>VXLAN ID</th>
	      					</container>
	      					<th>&nbsp;</th>
	      				</tr>
	      				<data-set var="network" value="#{networks}">
	      					<tr>
	      						<td>#{network.zone.summary}</td>
	      						<td>#{network.name}</td>
	      						<td>#{network.cidr}</td>
	      						<td><span class="badge badge-info">Unknown</span></td>
	      						<td>#{network.ipv4Router}</td>
	      						<td>#{network.ipv4DNS1}, #{network.ipv4DNS2}</td>
	      						<td>#{network.description}</td>
	      						<container rendered="#{balsa().permission('global_admin')}">
	      							<td><span class="badge badge-info">#{network.networkType}</span></td>
	      							<td><span class="badge badge-warning">#{network.vxlanSuffix}</span></td>
	      						</container>
	      						<td>
	      							<div class="btn-group">
										<button type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Manage Network</button>
										<div class="dropdown-menu dropdown-menu-right">
											<a class="dropdown-item text-primary" href="/network/id/#{network.id}">Details</a>
											<div class="dropdown-divider"></div>
											<h6 class="dropdown-header">Network State</h6>
											<a class="dropdown-item text-warning" href="/network/id/#{network.id}/restart">Restart</a>
								            <a class="dropdown-item text-success" href="/network/id/#{network.id}/start">Start</a>
								            <a class="dropdown-item text-warning" href="/network/id/#{network.id}/stop">Stop</a>
								            <div class="dropdown-divider"></div>
								            <a class="dropdown-item text-danger" href="/network/id/#{network.id}/destroy">Destroy</a>
										</div>
									</div>
	      						</td>
	      					</tr>
	      				</data-set>
	      			</table>
	      			<container rendered="#{balsa().permission('network_manage', currentAccount)}">
						<a href="/network/new" class="btn btn-primary">Create a Network</a>
					</container>
				</div>
			</div>
    	</div>
    </div>
	<div class="row" style="margin-top: 30px;">
    	<div class="col-md-12">
    		<div class="card">
    			<h5 class="card-header">Volumes</h5>
				<div class="card-body">
					<p class="card-text">These are you persistent volumes in the #{currentAccount.summary} Account.</p>
					<table class="table">
	      				<tr>
	      					<th>Zone</th>
	      					<th>Volume</th>
	      					<th>Size</th>
	      					<th>Shared</th>
	      					<th>Status</th>
	      					<th>&nbsp;</th>
	      				</tr>
	      				<data-set var="volume" value="#{volumes}">
	      					<tr>
	      						<td>#{volume.zone.summary}</td>
	      						<td>#{volume.name}</td>
	      						<td>#{volume.size / 1000 / 1000 / 1000} GB</td>
	      						<td>#{if(volume.shared, 'yes', 'no')}</td>
	      						<td><span class="badge badge-info">Unknown</span></td>
	      						<td>
	      							<div class="btn-group">
										<button type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Manage Volume</button>
										<div class="dropdown-menu dropdown-menu-right">
											<a class="dropdown-item text-primary" href="/volume/id/#{volume.id}">Details</a>
								            <div class="dropdown-divider"></div>
								            <a class="dropdown-item text-danger" href="/volume/id/#{volume.id}/destroy">Destroy</a>
										</div>
									</div>
	      						</td>
	      					</tr>
	      				</data-set>
	      			</table>
	      			<container rendered="#{balsa().permission('storage_manage', currentAccount)}">
						<a href="/volume/new" class="btn btn-primary">Create a Volume</a>
					</container>
				</div>
			</div>
    	</div>
    </div>
</fragment>