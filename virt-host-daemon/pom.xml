<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.intrbiz.virt</groupId>
		<artifactId>virt</artifactId>
		<version>1.0.0-SNAPSHOT</version>
	</parent>
	<artifactId>virt-host-daemon</artifactId>
	<dependencies>
		<dependency>
			<groupId>com.intrbiz.util</groupId>
			<artifactId>bootstrap</artifactId>
			<version>1.4.0</version>
		</dependency>
		<dependency>
			<groupId>log4j</groupId>
			<artifactId>log4j</artifactId>
		</dependency>
		<dependency>
			<groupId>com.intrbiz.balsa</groupId>
			<artifactId>balsa-core</artifactId>
		</dependency>
		<dependency>
			<groupId>com.intrbiz.virt</groupId>
			<artifactId>virt-libvirt</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>com.intrbiz.virt</groupId>
			<artifactId>virt-event-model</artifactId>
		</dependency>
		<dependency>
			<groupId>com.intrbiz.virt</groupId>
			<artifactId>virt-util</artifactId>
		</dependency>
		<dependency>
			<groupId>com.intrbiz.virt</groupId>
			<artifactId>virt-cluster</artifactId>
		</dependency>
		<dependency>
			<groupId>com.intrbiz.virt</groupId>
			<artifactId>virt-model</artifactId>
		</dependency>
		<dependency>
			<groupId>com.intrbiz.balsa</groupId>
			<artifactId>balsa-data</artifactId>
		</dependency>
	</dependencies>
	<build>
		<finalName>virt-host-daemon</finalName>
		<plugins>
			<plugin>
				<groupId>com.intrbiz.util</groupId>
				<artifactId>packaging</artifactId>
				<version>1.2.0</version>
				<configuration>
					<appClass>com.intrbiz.virt.VirtHostApp</appClass>
				</configuration>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>intrbiz-package</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

	<repositories>
		<repository>
			<id>vpp</id>
			<name>vpp</name>
			<url>https://nexus.fd.io/content/repositories/fd.io.release/</url>
		</repository>
	</repositories>
</project>